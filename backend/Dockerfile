FROM node:20-alpine AS build

WORKDIR /app

COPY package*.json ./

RUN npm install

COPY . .

RUN npm run build

FROM node:20-alpine

WORKDIR /app

COPY --from=build /app/package*.json ./

COPY --from=build /app/dist /app/dist

RUN npm install --only=production

EXPOSE 3001

CMD ["npm", "run", "start"]